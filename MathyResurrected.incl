	$${_PRO_FILE_PWD_}/../src/Settings.h \
	$${_PRO_FILE_PWD_}/../src/MathyResurrectedPlugin.h \
	$${_PRO_FILE_PWD_}/../src/evaluator/MathEvaluator.h \
	$${_PRO_FILE_PWD_}/../src/evaluator/Exceptions.h \
	$${_PRO_FILE_PWD_}/../src/evaluator/Conversion.h \
