	$${_PRO_FILE_PWD_}/../src/MathyResurrectedPlugin.cpp \
	$${_PRO_FILE_PWD_}/../src/evaluator/MathEvaluator.cpp \
	$${_PRO_FILE_PWD_}/../src/evaluator/Exceptions.cpp \
	$${_PRO_FILE_PWD_}/../src/evaluator/Conversion.cpp \
	$${_PRO_FILE_PWD_}/../src/evaluator/math_bridge_API.cpp
